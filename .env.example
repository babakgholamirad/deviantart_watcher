# DeviantArt API credentials (required)
DA_CLIENT_ID=
DA_CLIENT_SECRET=

# Target account (required)
DA_USERNAME=

# Storage paths
OUTPUT_DIR=downloads
STATE_FILE=state.json

# Polling and API behavior
PAGES_PER_CHECK=3
PAGE_SIZE=24
POLL_INTERVAL_SECONDS=0
REQUEST_TIMEOUT_SECONDS=30
MAX_SEEN_IDS=5000

# Optional behavior flags
INCLUDE_MATURE=false
ALLOW_PREVIEW=false
SEED_ONLY=false
VERBOSE=false

# Optional header override
USER_AGENT=auto-image-downloader/1.0
